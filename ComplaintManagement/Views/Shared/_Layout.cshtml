@using DataAccess.Enum
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PwC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />

    @RenderSection("head", false)

    <style>
        .validation-error {
            color: #f58d8d !important;
            font-size: 13px !important;
            margin-top: 10px;
            background: transparent !important;
            padding: 5px 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <header id="header_main">
            <div class="row">
                <div class="col-md-12 px-0">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-xs-8">
                                    <ul class="nav navbar-nav">
                                        @if (Convert.ToInt32(Session["UserRole"]) == (int)UserRole.Employee)
                                        {
                                            <li><a href="@Url.Action("Create", "ComplaintRequest")">Create</a></li>
                                        }
                                        <li><a href="@Url.Action("ComplaintList", "ComplaintRequest")">Complaint List</a></li>
                                        @if (Convert.ToInt32(Session["UserRole"]) == (int)UserRole.MxAdmin)
                                        {
                                            <li><a href="@Url.Action("AdminRegister", "User")">ADD New Admin</a></li>
                                        }
                                    </ul>
                                </div>
                                <div style="margin-left:20%">
                                    <ul class="nav navbar-nav" style="margin-left:20%;">
                                        <li> <a href="@Url.Action("Logout", "User")">Logout</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Assignment PWC</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
